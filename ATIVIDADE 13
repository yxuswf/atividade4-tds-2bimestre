programa
{
    funcao inicio()
    {
        real numero, soma, media
        inteiro i
        soma = 0

        para (i = 1; i <= 5; i = i + 1){
            escreva("Digite um número ", i, ": ")
            leia(numero)
            soma = soma + numero
        }
        
        media = soma / 5
        
        escreva("A soma dos números é: ", soma, "\n")
        escreva("A média dos números é: ", media, "\n")
    }
}
