programa
{
    funcao inicio()
    {
        inteiro n, i
        real numero, menor, maior, soma = 0

        escreva("Digite a quantidade de números (N): ")
        leia(n)

        se(n <= 0) {
            escreva("Por favor, insira um valor positivo para N.\n")
        }

        escreva("Digite o número 1: ")
        leia(numero)
        menor = numero
        maior = numero
        soma = numero

        para(i = 2; i <= n; i = i + 1) {
            escreva("Digite o número ", i, ": ")
            leia(numero)

            se (numero < menor){
                menor = numero
            }
            se (numero > maior){
                maior = numero
            }
            soma = soma + numero
        }

        escreva("\nMenor valor: ", menor, "\n")
        escreva("Maior valor: ", maior, "\n")
        escreva("Soma dos valores: ", soma, "\n")
    }
}
